@model Anagrafica

<h2>Crea Nuova Anagrafica</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Nome</label>
        <input type="text" asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Cognome</label>
        <input type="text" asp-for="Cognome" class="form-control" />
        <span asp-validation-for="Cognome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Indirizzo</label>
        <input type="text" asp-for="Indirizzo" class="form-control" />
    </div>
    <div class="form-group">
        <label>Codice Fiscale</label>
        <input type="text" asp-for="CodFisc" class="form-control" />
        <span asp-validation-for="CodFisc" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary my-3">Salva</button>
    <a class="btn btn-secondary my-3" href="@Url.Action("Index")">Indietro</a>
</form>
