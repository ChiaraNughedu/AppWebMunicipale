@model AppWebMunicipale.Models.Verbale

@{
    ViewData["Title"] = "Inserisci Nuovo Verbale";
}

<h2 class="textColor">Inserisci Nuovo Verbale</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <p class="textColor">Si è verificato un errore durante l'invio del form:</p>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="DataViolazione" class="control-label">Data Violazione</label>
        <input asp-for="DataViolazione" class="form-control" type="date" />
        <span asp-validation-for="DataViolazione" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IndirizzoViolazione" class="control-label">Indirizzo Violazione</label>
        <input asp-for="IndirizzoViolazione" class="form-control" />
        <span asp-validation-for="IndirizzoViolazione" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NominativoAgente" class="control-label">Nominativo Agente</label>
        <input asp-for="NominativoAgente" class="form-control" />
        <span asp-validation-for="NominativoAgente" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataTrascrizioneVerbale" class="control-label">Data Trascrizione Verbale</label>
        <input asp-for="DataTrascrizioneVerbale" class="form-control" type="date" />
        <span asp-validation-for="DataTrascrizioneVerbale" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Importo" class="control-label">Importo</label>
        <input asp-for="Importo" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Importo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DecurtamentoPunti" class="control-label">Decurtamento Punti</label>
        <input asp-for="DecurtamentoPunti" class="form-control" type="number" />
        <span asp-validation-for="DecurtamentoPunti" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary my-3">Crea Verbale</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
